<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">
    <ScrollView
        android:id="@+id/frameScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <HorizontalScrollView
            android:id="@+id/frameHScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/frameRelScroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/frameTablero">
                </FrameLayout>
            </RelativeLayout>

        </HorizontalScrollView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/cardsScroll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/background"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:paddingTop="4dp"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="horizontal"
                android:background="@color/cardsHand"
                android:id="@+id/cardsScrollLayout">
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition1"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition2"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition3"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition4"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition5"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition6"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition7"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition8"
                    android:layout_margin="5dp">
                </FrameLayout>
                <FrameLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:id="@+id/cardPosition9"
                    android:layout_margin="5dp">
                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@id/cardsScroll"
        android:layout_alignParentRight="true"
        android:text="@string/cards"
        android:onClick="btnHideLayout"
        android:textSize="12sp"
        android:id="@+id/btnHideLayout"
        android:background="@color/background"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_above="@id/cardsScroll"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:textAlignment="center"
        android:id="@+id/infoLabel"
        android:background="@color/background"/>

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heartContainers">
        <ImageView
            android:id="@+id/heartContainers_0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
        <ImageView
            android:id="@+id/heartContainers_8"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="0dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_zoomout2"
            android:background="@null"
            android:layout_margin="5dp"
            android:id="@+id/btnZoomOut"
            android:onClick="btnZoomOut"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_zoomin2"
            android:background="@null"
            android:layout_margin="5dp"
            android:id="@+id/btnZoomIn"
            android:onClick="btnZoomIn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/popupCardLayout"
        android:orientation="vertical"
        android:background="@color/popUpBody">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/popUpTitle"
            android:padding="5dp">
            <TextView
                android:id="@+id/popUpTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/next_player"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/popUpTitleText"/>
            <TextView
                android:id="@+id/popUpCardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textStyle="bold"
                android:textColor="@color/popUpTitleText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/tkbender"
                android:layout_margin="5dp"
                android:id="@+id/popUpImage"
                android:background="@color/white"/>


            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/bu"
                    android:layout_margin="5dp"
                    android:id="@+id/popUpContentImage"/>
                <TextView
                    android:id="@+id/popUpContentText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

            </FrameLayout>



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>